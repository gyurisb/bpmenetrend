<UserControl x:Class="CityTransitApp.WPSilverlight.BaseElements.DateTimePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="61" d:DesignWidth="480">

    <Border x:Name="Root" Grid.Column="1" Background="{StaticResource AppFieldBrush}" BorderThickness="0,0,0,2" BorderBrush="{StaticResource AppHeaderBackgroundBrush}" Tap="DateTimePicker_Tap">
        <StackPanel Margin="10,10,0,10" Orientation="Horizontal">
            <TextBlock x:Name="TypeText" Text="Indulás: " Foreground="{StaticResource AppFieldForegroundBrush2}" VerticalAlignment="Center" FontSize="24"/>
            <TextBlock x:Name="DateTimeText" Text="10:00" Foreground="{StaticResource AppFieldForegroundBrush}" VerticalAlignment="Center" FontSize="24"/>
        </StackPanel>
    </Border>
</UserControl>